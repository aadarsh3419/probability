from scipy.stats import poisson

# Example:
# A call center receives 4 calls per hour on average.
# Whatâ€™s the probability they get exactly 6 calls in an hour?

Î» = 4  # average rate (lambda)
k = 6  # number of actual events

# P(X = k)
probability = poisson.pmf(k, Î»)

print("ðŸ“ˆ Poisson Distribution Example")
print(f"P(X = {k}) when Î» = {Î»} =", round(probability, 4))
